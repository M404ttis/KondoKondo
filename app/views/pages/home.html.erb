<div class="container mt-5">
  <div class="search-bar">
    <div>
      <h3>Scroll through your Hood</h3>
      <%= form_tag kondos_path, class: "search-container", method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          placeholder: "Search location...", class: "search"
        %>
        <%= button_tag do %>
        <i class="fas fa-search search"></i>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="info-blocks row">
    <div class="block-one">
      <h2>Find Treasures</h2>
      <p></p>
    </div>
    <div class="block-two">
      <h2>Reuse Locally</h2>
      <p></p>
    </div>
    <div class="block-three">
      <h2>Create a Community</h2>
      <p></p>
    </div>
  </div>
</div>

