<div class="dash-container">
  <p class="dashboard-header">Dashboard</p>
  <div class="boxes">
    <div class="dash-box">
    <h2>My Favorites</h2>
        <% @favorites.each do |fav| %>
          <div class="card-product-two">
            <% if fav.kondo.image.attached? %>
              <%= cl_image_tag fav.kondo.image.key, height: 180, width: 100, crop: :fill %>
            <% end %>
              <div class="card-product-infos">
                <div class="d-flex">
                  <h2><%= fav.kondo.title %></h2>
                  <%= link_to favorite_path(fav, redirect_to: "dashboard"), method: :delete do %>
                    <i data-toggle="tooltip" data-placement="top" title="Unfavorite Kondo" class="fas fa-heart mr-2"></i>
                  <% end %>
                </div>
                <p><%= fav.kondo.description %></p>
                <div class="card-product-seller">
                  <p><strong>Pickup at:</strong> <%= fav.kondo.location %></p>
                  <p><strong>Kondor:</strong> <%= fav.kondo.user.username %></p>
                </div>
            </div>
          </div>
        <% end %>

      </div>
    <div class="dash-box">
      <div class="box-content">
      <h2>My Messages</h2>
      </div>
    </div>

    <div class="dash-box">
      <div class="box-content">
        <h2>My Kondos</h2>
        <% @kondos.each do |kondo|%>
        <div class="card-product-three">
            <% if kondo.image.attached? %>
              <%= cl_image_tag kondo.image.key, height: 180, width: 100, crop: :fill %>
            <% end %>
            <div class="card-product-infos">
                <h2><%= kondo.title %></h2>
                <p><%= kondo.description %></p>

                <% if kondo.reserved %>
                  <%= link_to dashboard_kondo_update_path(:kondo_id => kondo.id), method: :post do %>
                  <i class="fas fa-toggle-on"></i>  <p class="kondo-status">This kondo is reserved</p>
                  <br>
                  <% end %>
                  <% else %>
                    <%= link_to dashboard_kondo_update_path(:kondo_id => kondo.id), method: :post do %>
                    <i class="fas fa-toggle-off"></i>  <p class="kondo-status">This kondo is not yet reserved</p>
                    <br>
                    <% end %>
                <% end %>
                <% if kondo.active %>
                  <i class="far fa-eye"></i>  <p class="kondo-status">Your Kondo is active</p>
                <% end %>
                <br>
                <%= link_to edit_kondo_path(kondo), method: :post do  %>
                <i class="far fa-edit"></i>  <p class="kondo-status">Edit your Kondo</p>
                <% end %>

            </div>
          </div>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
