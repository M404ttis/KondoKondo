<div class="dash-container">
  <p class="dashboard-header">Dashboard</p>
  <div class="boxes">
    <div class="dash-box">
      <div class="box-content">
      <p>My Favorites</p>
        <% @favorites.each do |fav| %>
       <h1 class="kondo-title"><i class="fas fa-heart"></i>  <%= fav.kondo.title %></h1>
        <%= link_to 'Unfavorite', favorite_path(fav, redirect_to: "dashboard"), method: :delete %>
        <%= link_to 'Message Kondonator'%>
        <% end %>
      </div>
    </div>
    <div class="dash-box">
      <div class="box-content">
      <p>My Messages</p>
      </div>
    </div>
    <div class="dash-box">
      <div class="box-content">
        <p>My Kondos</p>
        <% @kondos.each do |kondo|%>
          <div class="kondo">
            <h1 class="kondo-title"><i class="fas fa-gem"></i>  <%= kondo.title %></h1>
            <p class="kondo-desc"><%= kondo.description %></p>
            <% if kondo.reserved %>
              <p class="kondo-status">- This item is reserved</p>
              <% else %>
              <p class="kondo-status">- This item is not yet reserved</p>
            <% end %>
            <% if kondo.active %>
              <p class="kondo-status">- Your Kondo is active</p>
            <% end %>
            <%= link_to "button", dashboard_kondo_update_path(:kondo_id => kondo.id), method: :post %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
