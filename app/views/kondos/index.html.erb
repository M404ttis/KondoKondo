<div class="container mt-5">


  <% @kondos.each do |kondo| %>
    <div class="card-product">
      <%= cl_image_tag kondo.image.key, height: 300, width: 400, crop: :fill %>
        <div class="card-product-infos">
            <h1><%= kondo.title %></h1>
            <h2><%= kondo.reserved %> - <%= kondo.active %></h2>
            <p><%= kondo.description %></p>
            <p><%= kondo.location %></p>
            <p>Fetch it at <%= kondo.user.username %>'s place </p>
      </div>
    </div>
  <% end %>

